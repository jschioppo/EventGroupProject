@model System.Collections.Generic.List<Events>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="all-result-container">
    <div id="no-results-window" class="header-text">0 Results</div>
    @foreach (var result in Model)
    {
        <div id="result" onclick="viewEventDetails(@result.EventId)">
            <div class="name-section">
                <strong>@result.EventName</strong>
            </div>
            <div class="location-section">
                <strong>@result.Location</strong>
            </div>
            <div class="time-section">
                <div>Happens at <strong>@result.StartTime</strong></div>
                <div>Lasts <strong>@result.Duration</strong> minutes</div>
            </div>
        </div>
    }
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#no-results-window").hide();

        if (@Model.Count  == 0) {
            $("#no-results-window").show();
        }
        else {
            $("#no-results-window").hide();
        }
    });

    function viewEventDetails(eventId) {
        var url = "/ViewSingleEvent/Index?eventId=" + eventId;
        window.location.href = url;
    }
</script>

<style type="text/css">
    #no-results-window{
        width: 50%;
        margin: auto;
    }
</style>

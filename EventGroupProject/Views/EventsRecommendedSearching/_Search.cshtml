@{
}
<link rel="stylesheet" href="~/css/site.css" />

<div class="true-top">
    <div class="topbar">
        <label class="header-text" for="searchbox">Where are you located?</label>
        <input id="searchbox" class="form-control" type="text" placeholder="Enter City Name..." />
    </div>
    <div id="tag-section">
        <div id="tag-header">
            <span  class="header-text">What are you interested in?</span>
        </div>
        <div id="search-tags">

            @foreach (var tag in Model)
            {
                <button class="tag-btn" id="tag-search-btn" type="button">@tag.Name</button>
            }
        </div>
    </div>
    <div>
        <button id="search-btn">Search</button>
    </div>
</div>

<script type="text/javascript">
    var userTags

    $('.tag-btn').click(function () {
        $(this).toggleClass("active");
    });

    $("#search-btn").click(function () {
        searchEvents();
    });

    function findSelected() {
        userTags = new Array();
        var btnContainer = document.getElementById('search-tags');
        var buttons = btnContainer.getElementsByTagName('button');

        for (i = 0; i < buttons.length; ++i) {
            if ($(buttons[i]).hasClass("active")) {
                userTags.push(i + 1);
            }
        }
    }
</script>

<style>
    * {
        box-sizing: border-box;
    }

    .topbar{
        width: 50%;
        margin: auto;
        margin-left: 35%;
    }

    #searchbox {
        width: 50%;
        padding: 10px;
        margin-top: -20px;
        margin-bottom: 30px;
    }

    .true-top {
        overflow: hidden;
        padding: 10px;
        -webkit-box-shadow: 3px 3px 5px 6px #006747;
        -moz-box-shadow: 3px 3px 5px 6px #006747;
        box-shadow: 3px 3px 5px 6px #006747;
    }

    #search-tags{
        display: inline;
        margin: 0;
        margin: auto;
    }

    #tag-search-btn{
        float: none;
        margin-top: 0px;
    }

    .tag-btn {
        width: 100px;
        white-space: nowrap;
        background-color: #006747;
        color: #DEB887;
        margin: 15px;
        border-radius: 12px;
        /*I didn't come up with the below. It's really intense. I just copied it from a blog to give the buttons the floaty effects*/
        -webkit-box-shadow: 0px 2px 0px #2b638f, 0px 1px 6px rgba(0,0,0,.4), inset 0px 1px 0px rgba(255,255,255,.3), inset 0px 0px 3px rgba(255,255,255,.5);
        -moz-box-shadow: 0px 2px 0px #2b638f, 0px 1px 6px rgba(0,0,0,.4), inset 0px 1px 0px rgba(255,255,255,.3), inset 0px 0px 3px rgba(255,255,255,.5);
        box-shadow: 0px 2px 0px #2b638f, 0px 1px 6px rgba(0,0,0,.4), inset 0px 1px 0px rgba(255,255,255,.3), inset 0px 0px 3px rgba(255,255,255,.5);
    }

        .tag-btn:active, .active {
            border-color: black !important;
            /*Makes the buttons sink down*/
            -webkit-transform: translate(0, 4px);
            -moz-transform: translate(0, 4px);
            transform: translate(0, 4px);
        }

    #tag-section{
        margin-left: -20px;
    }

    #tag-header {
        width: 50%;
        margin:auto;
        padding-bottom: 15px;
        margin-left: 35%;
    }

    #search-btn {
        background-color: #cccccc;
        border-color: black;
        width: 10%;
        float: right;
        color: black !important;
        text-align: center;
        margin-top: -5px;
        margin-bottom: 5px;
    }
</style>
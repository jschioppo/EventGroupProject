            success: function (result) {
                comments = result
            },
            error: function (response) {
                alert("Error");
            }
        })
    }

    function getUserId() {
        $.ajax({
            type: "GET",
            url: "GetUserId",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (result) {
                return result;
            },
            error: function (response) {

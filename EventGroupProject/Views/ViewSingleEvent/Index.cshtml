            }
        })
    }

    function isUserSignedUp() {
        alert(userId);
        alert(eventId);
        var signedUp;

        $.ajax({
            type: "GET",
            url: "IsUserSignedUp",
            contentType: "application/json;charset=utf-8",
            data: { userId: userId, eventId: eventId },
            dataType: "json",
            success: function (result) {

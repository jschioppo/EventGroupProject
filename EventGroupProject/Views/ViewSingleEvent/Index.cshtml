@model EventGroupProject.Models.Events

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/site.css" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous">

<h2>@Html.DisplayFor(model => model.EventName)</h2>

<div id="main-pane">
    <div id="details-pane" class="info-text">
        <div class="pane-header">
            Details:
        </div>
        <div class="scrollable-list">
            <div class="detail-box">
                <div class="info-text">
                    Host:
                </div>
                <div class="info-text">
                    @Html.DisplayFor(model => model.EventCreator.UserDisplayName)
                </div>
            </div>
            <div class="detail-box">
                <div class="info-text">
                    City:
                </div>
                <div class="info-text">
                    @Html.DisplayFor(model => model.City)
                </div>
            </div>
            <div class="detail-box">
                <div class="info-text">
                    Location:
                </div>
                <div class="info-text">
                    @Html.DisplayFor(model => model.Location)
                </div>
            </div>
            <div class="detail-box">
                <div class="info-text">
                    City:
                </div>
                <div class="info-text">
                    @Html.DisplayFor(model => model.StartTime)
                </div>
            </div>
            <div class="detail-box">
                <div class="info-text">
                    Duration:
                </div>
                <div class="info-text">
                    @Html.DisplayFor(model => model.Duration)
                </div>
            </div>
            <div class="detail-box">
                <div class="info-text">
                    Cost:
                </div>
                <div class="info-text">
                    $@Html.DisplayFor(model => model.Price)
                </div>
            </div>
            <div class="detail-box">
                <div class="info-text">
                    Description:
                </div>
                <div class="info-text">
                    @Html.DisplayFor(model => model.Description)
                </div>
            </div>
        </div>
    </div>
    <div id="users-pane" class="info-text">
        <div class="pane-header">Signed Up Users:</div>
        <div class="scrollable-list">
            @foreach (var user in Model.SignedUpUsers)
            {
                <div>@user.UserDisplayName</div>
                <div>@user.UserDisplayName</div>
                <div>@user.UserDisplayName</div>
                <div>@user.UserDisplayName</div>
                <div>@user.UserDisplayName</div>
            }
        </div>
    </div>
    <div id="comment-pane" class="info-text">
        <div id="loading-icon" class="loader">

        </div>
        <div id="not-signed-up-window">
            <div class="pane-header">To view this event's comments please sign up.</div>
            <button class="save-button" id="join-event-btn">Join</button>
        </div>
        <div id="signed-up-window">
            <div class="pane-header">Comments: </div>
            <div>
                <textarea id="comment-box" placeholder="Leave a comment.."></textarea>
                <button id="submit-comment-btn">Submit</button>
            </div>
            <div id="comment-section">
                <div id="comments-list">
                    @foreach (var comment in Model.EventComments)
                    {
                        <div id="single-comment">
                            <div id="comment-user-name">
                                @comment.UserDisplayName
                            </div>
                            <div id="comment-text">
                                @comment.Content
                                <button id="del-comment-btn" class="fas fa-trash"></button>
                            </div>
                            <hr />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</div>



<script type="text/javascript">
    $("#signed-up-window").hide();
    $("#not-signed-up-window").hide();
    $("#loading-icon").show();
    
    var eventId = @Model.EventId;
    var userId;

    $(document).ready(function () {

        getUserId(function user_id_cb(response) {
            userId = response;
            isUserSignedUp(function user_signed_up_cb(response) {
                $("#loading-icon").hide();
                if (response) {
                    $("#signed-up-window").show();
                    $("#not-signed-up-window").hide();
                }
                else{
                    $("#signed-up-window").hide();
                    $("#not-signed-up-window").show();
                }
            });
        });
    });

    //Not currently in use
    function getComments() {
        var id = 1;

        $.ajax({
            type: "GET",
            url: "GetComments",
            contentType: "application/json;charset=utf-8",
            data: { eventId: id },
            dataType: "json",
            success: function (result) {
                comments = result
            }
        })
    }

    function getUserId(user_id_cb) {
        $.ajax({
            type: "GET",
            url: "GetUserId",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (response) {
                user_id_cb(response);
            }
        });
    }

    function isUserSignedUp(user_signed_up_cb) {
        $.ajax({
            type: "GET",
            url: "IsUserSignedUp",
            contentType: "application/json;charset=utf-8",
            data: { userId: userId, eventId: eventId },
            dataType: "json",
            success: function (response) {
                user_signed_up_cb(response);
            }
        });
    }

